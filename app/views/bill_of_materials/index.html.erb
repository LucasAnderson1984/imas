<div class="clearfix">
  <h1 class="float-left my-2"><%= t('.title') %></h1>
  <div class="float-right mt-2">
    <%= link_to t('shared.buttons.new'),
                new_bill_of_material_path,
                class: 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.bill_of_materials.code') %></th>
      <th><%= t('shared.columns.action') %></th>
    </tr>
  </thead>
  <tbody>
    <% if bill_of_materials.each do |bill_of_material| %>
      <tr id="<%= "bill_of_material-#{bill_of_material.id}" %>">
          <td nowrap>
            <%= link_to(
                  bill_of_material.code,
                  bill_of_material_path(bill_of_material)) %>
          </td>
          <td nowrap>
            <%= link_to '',
                        edit_bill_of_material_path(bill_of_material),
                        class: 'btn btn-outline-secondary fas fa-edit' %>
          </td>
      </tr>
    <% end.empty? %>
      <tr>
        <td colspan="4"><%= t('.no_bill_of_materials') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
