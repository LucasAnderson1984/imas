<div class="clearfix">
  <h1 class="float-left my-0"><%= t('.title') %></h1>
  <div class="float-right mt-2">
    <%= link_to t('shared.buttons.back'),
                sales_path,
                class: 'btn btn-outline-primary ml-2' %>
  </div>
</div>

<hr />

<div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.sales.customer_name') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext">
        <%= sale.customer.name %>
      </p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.items.item_number') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext">
        <%= sale.item.item_number %>
      </p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.items.item_description') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext">
        <%= sale.item.item_description %>
      </p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.unit_of_measures.code') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext">
        <%= sale.unit_of_measure.code %>
      </p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.sales.sales_date') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext">
        <%= sale.name_of_date_string %>
      </p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.sales.sales_quantity') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext">
        <%= sale.delimited_sales_quantity %>
      </p>
    </div>
  </div>
</div>
