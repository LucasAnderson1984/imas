<div class="clearfix">
  <h1 class="float-left my-2"><%= t('.title') %></h1>
  <div class="float-right mt-2">
    <%= link_to t('shared.buttons.new'),
                new_item_item_unit_of_measure_path(item.id),
                class: 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.unit_of_measures.code') %></th>
      <th>
        <%=
          t(
            'activerecord' \
            '.attributes' \
            '.items' \
            '.item_unit_of_measures' \
            '.base_conversion'
          )
        %>
      </th>
      <th><%= t('shared.columns.action') %></th>
    </tr>
  </thead>
  <tbody>
    <% if item.item_unit_of_measures.each do |item_unit_of_measure| %>
      <tr id="<%= "item_unit_of_measure-#{item_unit_of_measure.id}" %>">
        <td nowrap>
          <%= link_to  item_unit_of_measure.unit_of_measure.code,
                       unit_of_measure_path(
                         item_unit_of_measure.unit_of_measure_id
                       ) %>
        </td>
        <td nowrap><%= item_unit_of_measure.base_conversion %></td>
        <td nowrap>
          <%= link_to '',
                      edit_item_item_unit_of_measure_path(
                        item.id,
                        item_unit_of_measure.id
                      ),
                      class: 'btn btn-outline-secondary fas fa-edit' %>
        </td>
      </tr>
    <% end.empty? %>
      <tr>
        <td colspan="3"><%= t('.no_item_unit_of_measures') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
