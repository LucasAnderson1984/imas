<div class="clearfix">
  <h1 class="float-left my-0"><%= t('.title') %></h1>
  <div class="float-right mt-2">
    <%= link_to t('.edit'),
                edit_item_path(item.id),
                class: 'btn btn-outline-secondary ml-2' %>
    <%= link_to t('.back'),
                items_path,
                class: 'btn btn-outline-primary ml-2' %>
  </div>
</div>

<hr />

<div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('.labels.item_number') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext"><%= item.item_number %></p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('.labels.item_description') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext"><%= item.item_description %></p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('.labels.unit_of_measure') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext">
        <%= item.code %>
      </p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('.labels.status') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext"><%= item.status %></p>
    </div>
  </div>
</div>
