<div class="clearfix">
  <h1 class="float-left my-2"><%= t('.title') %></h1>
  <div class="float-right mt-2">
    <%= link_to t('shared.buttons.new'),
                new_item_path,
                class: 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.items.item_number') %></th>
      <th><%= t('activerecord.attributes.items.item_description') %></th>
      <th><%= t('activerecord.attributes.unit_of_measures.code') %></th>
      <th><%= t('shared.columns.status') %></th>
      <th><%= t('shared.columns.action') %></th>
    </tr>
  </thead>
  <tbody>
    <% if items.each do |item| %>
      <tr id="<%= "item-#{item.id}" %>">
          <td nowrap><%= link_to item.item_number, item_path(item.id) %></td>
          <td nowrap><%= item.item_description %></td>
          <td nowrap><%= item.unit_of_measure_code %></td>
          <td nowrap><%= item.status %></td>
          <td nowrap>
            <%= link_to '',
                        edit_item_path(item.id),
                        class: 'btn btn-outline-secondary fas fa-edit' %>
          </td>
      </tr>
    <% end.empty? %>
      <tr>
        <td colspan="5"><%= t('.no_items') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
