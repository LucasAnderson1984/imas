<div class="clearfix">
  <h1 class="float-left my-2"><%= t('.title') %></h1>
  <div class="float-right mt-2">
    <%= link_to t('.new'),
                new_item_path,
                class: 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('.columns.item_number') %></th>
      <th><%= t('.columns.item_description') %></th>
      <th><%= t('.columns.action') %></th>
    </tr>
  </thead>
  <tbody>
    <% if resources.each do |item| %>
      <tr id="<%= "item-#{item.uuid}" %>">
          <td nowrap><%= link_to item.item_number, item_path(item.uuid) %></td>
          <td nowrap><%= item.item_description %></td>
          <td nowrap>
            <%= link_to '',
                        edit_item_path(item.uuid),
                        class: 'btn btn-outline-secondary fas fa-edit' %>
          </td>
      </tr>
    <% end.empty? %>
      <tr>
        <td colspan="4"><%= t('.no_items') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
