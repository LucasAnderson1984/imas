<div class="clearfix">
  <h1 class="float-left my-0"><%= t('.title') %></h1>
  <div class="float-right mt-2">
    <%= link_to t('shared.buttons.edit'),
                edit_customer_path(customer),
                class: 'btn btn-outline-secondary ml-2' %>
    <%= link_to t('shared.buttons.back'),
                customers_path,
                class: 'btn btn-outline-primary ml-2' %>
  </div>
</div>

<hr />

<div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.customers.name') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext">
        <%= customer.name %>
      </p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.customers.city') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext">
        <%= customer.city %>
      </p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.customers.state') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext">
        <%= customer.state %>
      </p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.customers.zip') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext">
        <%= customer.zip %>
      </p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.customers.country') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext">
        <%= customer.country %>
      </p>
    </div>
  </div>
</div>
