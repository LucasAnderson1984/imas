<div class="clearfix">
  <h1 class="float-left my-0"><%= t('.title') %></h1>
  <div class="float-right mt-2">
    <%= link_to t('shared.buttons.edit'),
                edit_admin_user_path(user.id),
                class: 'btn btn-outline-secondary ml-2' %>
    <%= link_to t('shared.buttons.back'),
                admin_users_path,
                class: 'btn btn-outline-primary ml-2' %>
  </div>
</div>

<hr />

<div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.admin.users.name') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext"><%= user.name %></p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.admin.users.email') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext"><%= user.email %></p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('shared.labels.status') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext"><%= user.status %></p>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-4 col-form-label font-weight-bold text-right">
      <%= t('activerecord.attributes.admin.users.last_sign_in') %>
    </label>
    <div class="col-sm-8">
      <p class="form-control-plaintext"><%= user.last_sign_in_at %></p>
    </div>
  </div>
</div>
